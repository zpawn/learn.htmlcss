block footer

    - var socialLinks = {'facebook-official': '//facebook.com', 'twitter': '//twitter.com', 'google-plus': '//google.com', 'linkedin': '//linkedin.com' };

    footer.footer
        .footer__top
            .container
                .footer__title Get in touch
                .footer__links
                    each link, icon in socialLinks
                        a.footer__social(href=link target="_blank")
                            i(class='fa fa-' + icon aria-hidden='true')
                                span.visually-hidden=icon
                .footer__text Subscribe to our newsletter to stay update with what is new
                form(action='#' method='post')
                    .footer__field: input.footer__input(type='email' placeholder='Email Address')
                    button(type='submit').button Subscribe

        .footer__bottom
            .footer__copy Cssauthor.com &copy; 2014 All Rights Reserved

    script(src='./js/app.min.js')
